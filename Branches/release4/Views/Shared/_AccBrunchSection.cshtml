     @{EIF.Helper.Get get = new EIF.Helper.Get();}
@{if (ViewBag.UserID!=null && ViewBag.UserID!="")
  {
     <div class="form-group">
    @Html.DropDownList("SectionID", get.SectionList(Convert.ToInt16(ViewBag.UserID), Convert.ToInt16(ViewBag.SectionID)) as SelectList, new
                                                {
                                                    @class = "form-control chosen-select",//control-label
                                                })
</div>
     <div class="form-group">
         @Html.DropDownList("BrunchID", get.BrunchList(Convert.ToInt16(ViewBag.UserID), Convert.ToInt16(ViewBag.Brunch)) as SelectList, new
                                                     {
                                                         @class = "form-control chosen-select",//control-label
                                                     })
     </div> 
  }
  else
	{      
      <div class="form-group">
          @Html.DropDownList("SectionID", get.SectionList(null, null) as SelectList, new
                                                {
                                                    @class = "form-control chosen-select",//control-label
                                                })
</div>
      <div class="form-group">
        @Html.DropDownList("BrunchID", get.BrunchList(null, null) as SelectList, new
                                                    {
                                                        @class = "form-control chosen-select",//control-label
                                                    })
    </div>   
	}}
@{if (ViewBag.BrunchSec != null)
{
    <p class="text-center text-gray" id="Msgusr" style="text-align:left">@ViewBag.BrunchSec</p>
}}

