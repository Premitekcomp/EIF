@{EIF.Helper.Get get = new EIF.Helper.Get();}
<!-- JQuery  -->
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Content/assets/js/plugins/datatables/jquery.dataTables.min.js"></script>
<input type="hidden" id="UserId" value="@ViewBag.UserId" />
@{
    var DataLst = (List<EIF.Models.UserDataScope>)ViewBag.Data;
}
<table cellpadding="0" border="0" class="table table-striped table-bordered" id="tbl3">
    <thead>
        <tr>
            <th>Bank</th>
            <th>Product</th>
            <th>Domain Type</th>
            <th> Region </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var DataItem in DataLst)
{
    <tr id="row_@DataItem.ID">
        <td style="width:20%;">
            <div class="form-group col-md-12 col-sm-9">
                <div class="row">
                    <div class="" id="Bank_@DataItem.ID">
                        @Html.DropDownList("BankID", get.AgencyList(0, DataItem.BankID.ToString()) as SelectList, "", new
                                                {
                                                    @class = "form-control select2 chosen-select BANK",

                                                })
                    </div>
                </div>
            </div>
        </td>

        <td style="width:15%;">
            <div class="form-group col-md-12 col-sm-9">
                <div class="row">
                    <div class="" id="ProductID_@DataItem.ID">
                        @Html.DropDownList("ProductID", get.ProductLst(0, DataItem.ProductID.ToString()) as SelectList, "", new
                                                {
                                                    @class = "form-control select2 chosen-select PRODUCT",

                                                })
                    </div>
                </div>
            </div>
        </td>

        <td style="width:15%;">
            <div class="form-group col-md-12 col-sm-9">
                <div class="row">
                    <div class="" id="TypeID_@DataItem.ID">
                        @Html.DropDownList("TypeID", get.DomainType(DataItem.TypeID.ToString()) as SelectList, "", new
                                                {
                                                    @class = "form-control select2 chosen-select TYPE",

                                                })
                    </div>
                </div>
            </div>
        </td>

        <td style="width:15%;">
            <div class="form-group col-md-12 col-sm-9">
                <div class="row">
                    <div class="" id="RegionID_@DataItem.ID">
                        @Html.DropDownList("RegionID", get.Region(DataItem.RegionID) as MultiSelectList, "", new
                                                {
                                                    @class = "form-control select2 chosen-select REGION",
                                                    @multiple = "multiple",
                                                    @onchange = "RegionChange(this)"
                                                })
                    </div>
                </div>
            </div>
        </td>
        <td style="width:15%;">
            <div class="form-group col-md-12 col-sm-9">
                <div class="row">
                    <div class="" id="CityID_@DataItem.ID">
                        @Html.DropDownList("CityID", get.City(DataItem.CityID) as MultiSelectList, "", new
                                                {
                                                    @class = "form-control select2 chosen-select CITY",
                                                    @multiple = "multiple",
                                                    @onchange = "CityChange(this)"
                                                })
                    </div>
                </div>
            </div>
        </td>
        <td>
            <a href="javascript:void(0);" onclick="EditDataScope(@DataItem.ID);" class="btn btn-default tooltip-btn"><i class="fa fa-save"></i> Update</a>
            <a href="javascript:void(0);" onclick="DeleteDataScope(@DataItem.ID);" class="btn btn-default tooltip-btn"><i class="fa a-trash-o"></i> Delete</a>
        </td>

    </tr>
}
    </tbody>
    <tfoot style="background: #ccc;">
        <tr>
            <td style="width:20%;">
                <div class="form-group col-md-12 col-sm-9">
                    <div class="row">
                        <div class="">
                            @Html.DropDownList("BankID_0", get.AgencyList(0, null) as SelectList, "", new
                                                {
                                                    @class = "form-control select2 chosen-select",
                                                   
                                                })
                        </div>
                    </div>
                </div>
            </td>

            <td style="width:15%;">
                <div class="form-group col-md-12 col-sm-9">
                    <div class="row">
                        <div class="">
                            @Html.DropDownList("ProductID_0", get.ProductLst(0, null) as SelectList, "", new
                                                {
                                                    @class = "form-control select2 chosen-select",

                                                })
                        </div>
                    </div>
                </div>
            </td>

            <td style="width:15%;">
                <div class="form-group col-md-12 col-sm-9">
                    <div class="row">
                        <div class="">
                            @Html.DropDownList("TypeID_0", get.DomainType(null) as SelectList, "", new
                                                {
                                                    @class = "form-control select2 chosen-select",

                                                })
                        </div>
                    </div>
                </div>
            </td>

            <td style="width:15%;">
                <div class="form-group col-md-12 col-sm-9">
                    <div class="row">
                        <div class="">
                            @Html.DropDownList("RegionID_0", get.Region(null) as MultiSelectList, "", new
                                                {
                                                    @class = "form-control select2 chosen-select",
                                                    @multiple = "multiple",
                                                    @onchange = "RegionChange(this)"
                                                })
                        </div>
                    </div>
                </div>
            </td>
            <td style="width:15%;">
                <div class="form-group col-md-12 col-sm-9">
                    <div class="row">
                        <div class="">
                            @Html.DropDownList("CityID_0", get.City(null) as MultiSelectList, "", new
                                                {
                                                    @class = "form-control select2 chosen-select",
                                                    @multiple = "multiple",
                                                    @onchange = "CityChange(this)"
                                                })
                        </div>
                    </div>
                </div>
            </td>
            <td>
                <a href="javascript:void(0);" onclick="NewDataScope();" class="btn btn-default tooltip-btn"><i class="fa fa-save"></i> Save</a>

            </td>

        </tr>

    </tfoot>

</table>
<script src="~/Content/assets/js/plugins/bootstrap-chosen/chosen.jquery.js"></script>
<script>
    $(document).ready(function () {
        $(".chosen-select").chosen();
    })
</script>