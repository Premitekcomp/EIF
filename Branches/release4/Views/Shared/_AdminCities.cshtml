<!-- JQuery  -->
<script src="~/Scripts/jquery-1.10.2.js"></script>

<table cellpadding="0" border="0" class="table table-striped table-bordered" id="tbl3">
    <thead>
        <tr>
            <th>City Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (ViewBag.Cities != null)
            {
                IEnumerable<EIF.Models.City> Cities = ViewBag.Cities;
                foreach (var cityitem in Cities)
                {
                    <tr id="row_@cityitem.CityId">
                        <td>
                            <div class="form-group col-md-12 col-sm-9">
                                <div class="row">
                                    <div class="">
                                        <input type="text" value="@cityitem.CityName" id="CityName_@cityitem.CityId" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <a href="javascript:void(0);" index="@cityitem.CityId" onclick="EditCity(this);" class="btn btn-default tooltip-btn"><i class="fa fa-save"></i> Update</a>
                            <a href="javascript:void(0);" index="@cityitem.CityId" onclick="DeleteCity(this);" class="btn btn-default tooltip-btn"><i class="fa fa-trash-o"></i> Delete</a>
                        </td>

                    </tr>
                }
            }
        }
    </tbody>
    <tfoot style="background: #ccc;">
        <tr>
            <td>
                <div class="form-group col-md-12 col-sm-9">
                    <div class="row">
                        <div class="">
                            <input type="text" id="CityName_0" class="form-control" />
                        </div>
                    </div>
                </div>
            </td>
            <td>
                <a href="javascript:void(0);" onclick="NewCity();" class="btn btn-default tooltip-btn"><i class="fa fa-save"></i> Save</a>

            </td>

        </tr>

    </tfoot>

</table>
