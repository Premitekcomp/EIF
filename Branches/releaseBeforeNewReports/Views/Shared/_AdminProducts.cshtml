<!-- JQuery  -->
<script src="~/Scripts/jquery-1.10.2.js"></script>

<table cellpadding="0" border="0" class="table table-striped table-bordered" id="tbl3">
    <thead>
        <tr>
            <th>Product Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (ViewBag.products != null)
            {
                 IEnumerable<EIF.Models.Product> Products = ViewBag.products;
                foreach (var proitem in Products)
                {
                     <tr id="row_@proitem.ProductId">
                        <td>
                            <div class="form-group col-md-12 col-sm-9">
                                <div class="row">
                                    <div class="">
                                        <input type="text" value="@proitem.ProductName" id="ProdName_@proitem.ProductId" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <a href="javascript:void(0);" index="@proitem.ProductId" onclick="EditProduct(this);" class="btn btn-default tooltip-btn"><i class="fa fa-save"></i> Update</a>
                            <a href="javascript:void(0);" index="@proitem.ProductId" onclick="DeleteProduct(this);" class="btn btn-default tooltip-btn"><i class="fa fa-trash-o"></i> Delete</a>
                        </td>

                 </tr>
                }
            }
        }
    </tbody>
    <tfoot style="background: #ccc;">
        <tr>
            <td>
                <div class="form-group col-md-12 col-sm-9">
                    <div class="row">
                        <div class="">
                            <input type="text" id="ProdName_0" class="form-control" />
                        </div>
                    </div>
                </div>
            </td>
            <td>
                <a href="javascript:void(0);" onclick="NewProduct();" class="btn btn-default tooltip-btn"><i class="fa fa-save"></i> Save</a>

            </td>

        </tr>

    </tfoot>

</table>
