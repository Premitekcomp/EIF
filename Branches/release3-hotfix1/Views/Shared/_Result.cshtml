 @{
     if (ViewBag.DomainID!=null)
     {
   <input type="hidden" id="DomainID1" name="DomainID1" value="@ViewBag.DomainID" />
     }
     else
     {
            <input type="hidden" id="DomainID1" name="DomainID1" value="0" />
     }
     
    if (ViewBag.saved != null)
    {

        <div class="alert alert-info alert-dismissable" dir="ltr" style="text-align:left">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            @ViewBag.saved .
        </div>

        <script>
            window.scrollTo(500, 0);
        </script>
    }
    if (ViewBag.error != null)
    {

        <div class="alert alert-danger alert-dismissable" dir="ltr" style="text-align:left">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        @Html.Raw(ViewBag.error)
        </div>

        <script>
            window.scrollTo(500, 0);
        </script>
    }
     if (ViewBag.Msg != null)
    {
         
        <div class="alert alert-info alert-dismissable" dir="ltr" style="text-align:left">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
           @{foreach (string S in ViewBag.Msg)
             {
                 <br /><span>@S</span>
             }}
             
        </div>

        <script>
            window.scrollTo(500, 0);
        </script>
    }
}