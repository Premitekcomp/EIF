
<div class="panel panel-default">
    <div class="panel-body">
        <div id="container">
            @{if (ViewBag.Tbl != null)
            {
                List<Dictionary<string, object>> Model = ViewBag.Tbl;
                List<Dictionary<string, object>> ModelTotal = ViewBag.TblTotal;
                  <div class="scrollmenu">
                      <table cellpadding="0" border="0" class="table table-striped table-bordered" id="basicTble3">
                          <thead>
                              <tr>
                                  @{
                foreach (var row in Model.FirstOrDefault())
                {
                  <th>@row.Key</th>
                }}

                              </tr>
                          </thead>
                          <tbody>
                              @{
                foreach (var row in Model)
                {
                  <tr>
                      @foreach (var column in row)
                      {
                          <td>@column.Value</td>
                      }
                  </tr>
                }}
                          </tbody>
                          <tfoot style="background: #ccc;">
                              @{
                foreach (var row in ModelTotal)
                {
                      <tr>
                          @foreach (var column in row)
                          {
                              <td>@column.Value</td>
                          }
                      </tr>
                }}
                          </tfoot>

                      </table>

                  </div>
                
            }
              else
              {
                 <p class="text-center">No Data Available</p> 
              }}


        </div>
    </div>
</div>



<link href="~/Content/assets/css/plugins/datatables/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Content/assets/js/plugins/datatables/jquery.dataTables.js"></script>
<script src="~/Content/assets/js/plugins/datatables/DT_bootstrap.js"></script>
<script src="~/Content/assets/js/plugins/datatables/jquery.dataTables-conf.js"></script>
<script>
    $('#basicTble3').dataTable({
        "pageLength": 25,
    });
</script>
